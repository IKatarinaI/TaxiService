@model TaxiSluzba.Models.Voznja
@{
    ViewBag.Title = "PocniSaVoznjom";
}

<h2>Voznja je u toku...</h2>
<h4>Po zavrsetku voznje odaberite! Voznja je prosla:</h4></br>
<form action="/Home/UspesnaVoznja" method="post">
    <input type="hidden" name="datumVoznje" value="@Model.datum">
    <input type="hidden" name="musterija" value="@Model.musterija.username">
    <input type="hidden" name="vozac" value="@Model.vozac.username">
    <input type="submit" value="Uspeno">
</form>
<form action="/Home/NeuspesnaVoznja" method="post">
    <input type="hidden" name="datumVoznje" value="@Model.datum">
    <input type="hidden" name="vozac" value="@Model.vozac.username">
    <input type="hidden" name="musterija" value="@Model.musterija.username">
    <input type="submit" value="Neuspesno">
</form>